@*Log in form*@
<div class="row justify-content-center" id="logInDiv" hidden>
    <div class="col-lg-4">
        <div class="card shadow-lg border-info rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>

            <div class="card-body">
                <form class="form-horizontal" method="post" action="post/" id="logInForm">
                    <div class="form-group ">
                        <label class="small mb-1" for="logInEmail">Email</label>
                        <input class="form-control py-4 col-lg-12" id="logInEmail" type="email" placeholder="Enter email address" />
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" for="logInPassword">Password</label>
                        <input class="form-control py-4 col-lg-12" id="logInPassword" type="password" placeholder="Enter password" />
                    </div>
                    <div class="form-group d-flex align-items-center mt-4 mb-0">
                        <button type="submit" class="btn btn-info">Login</button>
                        <button type="button" id="exitBtn" class="btn btn-default">Exit</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a role="button" id="regBtn" style="color:blue">Need an account? Sign up!</a></div>
            </div>
        </div>
    </div>
</div>

@*Register form*@
<div class="row justify-content-center" id="registerDiv" hidden>
    <div class="col-lg-4">
        <div class="card shadow-lg border-info rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>

            <div class="card-body">
                <form class="form-horizontal" method="post" action="post/" id="registerForm">

                    <div class="form-group">
                        <label class="small mb-1" for="registerEmail">Email</label>
                        <input class="form-control py-4" id="registerEmail" type="email" aria-describedby="emailHelp" placeholder="Enter email address" />
                    </div>

                    <div class="form-group">
                        <label class="small mb-1" for="registerPassword">Password</label>
                        <input class="form-control py-4" id="registerPassword" type="password" placeholder="Example.123" />
                    </div>

                    <div class="form-group">
                        <label class="small mb-1" for="registerPassword2">Confirm Password</label>
                        <input class="form-control py-4" id="registerPassword2" type="password" placeholder="Confirm password" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create account</button>
                        <button type="button" id="exitBtn2" class="btn btn-default">Exit</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a role="button" id="backToLogin" style="color:blue">Go to login page</a></div>
            </div>
        </div>
    </div>
</div>




