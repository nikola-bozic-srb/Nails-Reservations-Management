@*Modal with add/edit form*@
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style='text-align:center'>
    <div class="modal-dialog" role="contentinfo">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-header shadow-lg border-0 rounded-lg mt-3" style="margin-left:2rem;margin-right:2rem">
                <h2 class="modal-title font-weight-light my-4" id="exampleModalLabel" style="margin:0 auto"></h2>
            </div>
            <div class="modal-body">
                @*Add form*@
                <form class="form-horizontal" method="post" id="addForm">
                    <br />
                    <div class="form-group">
                        <label class="control-label" for="client">Client:</label>
                        <div class="col-sm-8" style="float:right">
                            <input type="text" class="form-control" id="client">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="category">Category:</label>
                        <div class="col-sm-8" style="float:right">
                            <select class="form-control" id="category">
                                <option selected>Choose category:</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="date">Date:</label>
                        <div class="col-sm-8" style="float:right">
                            <input type="datetime-local" class="form-control" id="date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="contact">Contact:</label>
                        <div class="col-sm-8" style="float:right">
                            <input type="text" class="form-control" id="contact">
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-default" style="width:150px;background-color:cornflowerblue;color:white;margin:2rem">Submit</button>
                            <button type="button" id="clear" class="btn btn-default" style="width:150px;background-color:black;color:white; margin:2rem">Clear</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

